    <script>
        // Función para la respuesta correcta
        function respuestaCorrecta() {
            const mensaje = document.getElementById('mensaje');
            mensaje.textContent = "¡Correcto! 🌟 Te quiero muchísiiiiiiiimo😍😍😍😍 espera que todavía hay una sorpresa si.";
            mensaje.style.display = "block"; // Mostrar el mensaje
            setTimeout(() => {
                mensaje.style.display = "none"; // Ocultar el mensaje después de 6 segundos
                window.location.href = "file:///C:/Users/alexi/Downloads/New%20Piskel%20(1).gif";
            }, 6000); // Tiempo en milisegundos
        }

        // Función para respuestas incorrectas
        function mostrarError() {
            const mensaje = document.getElementById('mensaje');
            mensaje.textContent = "Respuesta incorrecta. Por favor, inténtalo otra vez, tú puedes mi niña🤭🤭🤭.";
            mensaje.style.display = "block"; // Mostrar el mensaje
            setTimeout(() => {
                mensaje.style.display = "none"; // Ocultar el mensaje después de 2 segundos
            }, 2000); // Tiempo en milisegundos
        }
    </script>
