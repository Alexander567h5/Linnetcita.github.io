    <!-- Botones con las opciones -->
    <button onclick="mostrarError()">Sí</button>
    <button onclick="mostrarError()">Quizás</button>
    <button onclick="mostrarError()">No</button>
    <button onclick="mostrarError()">Quién sabe</button>
    <button onclick="mostrarError()">Muchísimo</button>
    <button onclick="respuestaCorrecta()">Muchisiiiimo</button>

    <p id="mensaje"></p>

